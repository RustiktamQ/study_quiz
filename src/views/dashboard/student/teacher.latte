{include '../../partials/header.latte'}
  <div class="min-h-screen flex flex-col">
    <div class="container mx-auto px-4 py-6">
      <!-- Main content -->
      <main class="grid grid-cols-1 lg:grid-cols-3 gap-6">
        <div class="lg:col-span-2">
